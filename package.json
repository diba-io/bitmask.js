{
  "name": "bitmask.js",
  "version": "0.0.0-development",
  "description": "JS/TS wrapper of bitmask-core: the core functionality for the BitMask wallet.",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "mocha",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/diba-io/bitmask.js.git"
  },
  "keywords": [
    "bitmask",
    "bitcoin",
    "wallet",
    "crypto",
    "web3",
    "diba",
    "bitmask.js",
    "bitmaskjs",
    "wasm",
    "rust",
    "typescript",
    "lightning",
    "network",
    "rgb",
    "protocol",
    "satoshi",
    "carbonado"
  ],
  "author": "Trevor O'Farrell <trevor@diba.io>",
  "contributors": [
    "Trevor O'Farrell <trevor@diba.io>",
    "Jose Diego Robles <jose@diba.io>",
    "Hunter Trujillo <hunter@diba.io>",
    "Francisco Calder√≥n <francisco@diba.io>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diba-io/bitmask.js/issues"
  },
  "homepage": "https://github.com/diba-io/bitmask.js#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "mocha": "^10.2.0",
    "semantic-release": "^19.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "bitmask-core": "^0.5.2"
  }
}
